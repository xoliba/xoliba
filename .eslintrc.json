{
    "parserOptions": {
        "ecmaVersion": 6,
	"sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "semi": 2,
	"indent": ["warn", 4],
	"camelcase": 1,
	"array-bracket-spacing": 1,
	"no-extra-parens": 1,
	"no-prototype-builtins": 2,
	"no-template-curly-in-string": 2,
	"block-scoped-var": 1,
	"eqeqeq": 2,
	"curly": 1,
	"no-console": 0,
	"dot-location": 1,
	"dot-notation": 1,
	"no-else-return": 1,
	"no-empty-function": 1,
	"no-eq-null": 1,
	"no-implicit-globals": 1,
	"no-loop-func": 1,
	"no-multi-spaces": 1,
	"no-multi-str": 1,
	"no-new": 1,
	"no-new-func": 1,
	"no-new-wrappers": 1,
	"no-return-assign": 2,
	"no-param-reassign": 2,
	"no-self-compare": 1,
	"no-unmodified-loop-condition": 2,
	"no-unused-expressions": 1,
	"no-useless-escape": 1,
	"no-use-before-define": 2,
	"block-spacing": 1,
	"brace-style": 1,
	"comma-spacing": 1,
	"comma-style": 1,
	"consistent-this": 1,
	"func-call-spacing": 1,
	"key-spacing": 1,
	"keyword-spacing": 1,
	"max-depth": ["warn", 4],
	"max-len": ["warn", 80],
	"max-lines": ["warn", 300],
	"max-statements": ["warn", 20]
    },
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [
        "standard",
        "promise"
    ]
}
